{
    "manifest_version": 3,
    "name": "AbuseIPDB Check",
    "description": "Check a URL or an IP address on AbuseIPDB",
    "version": "1.0",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "contextMenus",
        "notifications"
    ],
    "host_permissions": [
        "https://www.abuseipdb.com/*"
    ],
    "action": {
        "default_icon": "images/icon48.png",
        "default_title": "Check IP on AbuseIPDB"
    }
}
